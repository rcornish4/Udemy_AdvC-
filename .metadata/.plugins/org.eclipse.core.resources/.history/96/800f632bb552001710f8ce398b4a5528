#include <iostream>
#include <map>
#include <typeinfo>

int main( int arc, char** argv ) {
	std::map<std::string, int> ages;

	ages["Mike"] = 40;
	ages["Raj"] = 20;
	ages["Vicky"] = 30;

	std::cout << ages["Raj"] << std::endl;

	for ( std::map<std::string, int>::iterator it = ages.begin();
			it != ages.end(); ++it ) {
		std::cout << it->first + ": " << it->second << std::endl;
	}

	for ( std::map<std::string, int>::iterator it = ages.begin();
			it != ages.end(); ++it) {
		decltype( *it ) age = *it;

		std::cout << typeid(age).name() << std::endl;
	}

	return 0;
}


