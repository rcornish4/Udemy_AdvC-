#ifndef COMPLEX_H_
#define COMPLEX_H_

namespace caveofprogramming {

class Complex {
private:
	double real;
	double imaginary;

public:
	Complex();
	Complex(double real, double imaginary);
	// Copy Constructor
	Complex( const Complex &other );

	double getReal() {
		return real;
	}

	double getImaginary() {
		return imaginary;
	}

	const Complex &operator= (const Complex &other);
	~Complex() { }
};




}



#endif /* COMPLEX_H_ */
